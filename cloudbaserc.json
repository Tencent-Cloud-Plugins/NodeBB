{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "Nodebb",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "nodebb",
          "cpu": 2,
          "mem": 4,
          "minNum": 0,
          "maxNum": 1,
          "servicePath": "/",
          "uploadType": "image",
          "imageInfo": {
            "imageUrl": "ccr.ccs.tencentyun.com/tcbimages/nodebb-tcb:1.16.2"
          },
          "containerPort": 4567,
          "envVariables": {
            "APP_URL": "https://${TcbHttpServiceDefaultDomain}",
            "ADMIN_USERNAME": "{{env.ADMIN_USERNAME}}",
            "ADMIN_PASSWORD": "{{env.ADMIN_PASSWORD}}"
          },
          "volumeMounts": {
            "/data/db": "nodebb-cfs",
            "/usr/src/app/public/uploads": "nodebb-cfs-upload"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "nodebb-cfs"
        },
        {
          "type": "CFS",
          "name": "nodebb-cfs-upload"
        }
      ],
      "environment": {
        "ADMIN_USERNAME": {
          "description": "管理控制台账号",
          "required": true,
          "default": "admin",
          "validation": {
            "rule": {
              "type": "RegExp",
              "pattern": "^[A-Za-z]{2,16}$",
              "flag": "g"
            },
            "errorMessage": "字母组合，长度范围是 2 ~ 16"
          }
        },
        "ADMIN_PASSWORD": {
          "description": "初始管理控制台密码",
          "required": true,
          "default": "nodebb123",
          "validation": {
            "rule": {
              "type": "RegExp",
              "pattern": "^(?![0-9]+$)(?![a-zA-Z]+$)[0-9A-Za-z]{6,20}$",
              "flag": "g"
            },
            "errorMessage": "字母和数字的组合，长度范围是 6 ~ 20"
          }
        }
      }
    }
  }
}